class Tarea9:
    def __init__(self):
        pass

    def sumaDeNumeros(self):
        self.resultado = 0
        while True:
            self.numero = int(input("Ingrese un valor numérico: "))
            if self.numero != 0:
                self.resultado = self.resultado + self.numero
            else:
                break
        print("La suma de los numeros ingresados es: ", resultado)


        

